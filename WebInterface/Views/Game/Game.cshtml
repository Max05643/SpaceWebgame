@{
    ViewData["Title"] = "Game";
}

<div id="damage-effect" style="width:100%;height:100%;z-index:1;object-fit:cover;position:fixed;top:0;left:0;" class="prevent-select damage-background"></div>


<div id="main-ui-container" class="prevent-select">

    <div id="chatcontainer" style="position:fixed; margin: 10px; bottom: 0; right: 0;max-width:25%;max-height:40%;z-index:5;opacity:0.6;overflow-y:auto;">
        <input type="text" id="inputchatmessage">
        <button id="sendchatbutton">Send</button>
        <div id="chattextcontainer"></div>
    </div>
    

    <div id="safezonemessage" style="position:fixed; left: 50%; text-align: center;">
    You are in a safe zone
    </div>

    <p id="debugmessage" style="position:fixed; margin: 10px; top: 0; right: 0;">Debug here</p>

    <table id="investments-table" class="table table-striped">
        <thead>
            <tr><td colspan="3"><div class="btn btn-primary" id="repairButton"></div></td></tr>
        </thead>
        <tbody>
        </tbody>
    </table>



    <div id="revivemessage" class="text-center mt-3">
        <p class="mb-3">You are not in game</p>
        <button id="revivebutton" class="btn btn-primary mb-3">Revive</button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mb-3">Back</a>
    </div>


    <div id="progress-bar-sample" class="health-progress-bar" style="display:none;">
        <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

</div>

@section Scripts
    {
    <script>let playerId = "@ViewData["playerId"]!.ToString()";</script>
    <script>let serverId = "@ViewData["serverId"]!.ToString()";</script>
    <script src="~/js/game.js" asp-append-version="true"></script>
}